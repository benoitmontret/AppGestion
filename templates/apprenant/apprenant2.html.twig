{% extends 'base.html.twig' %}

{% block title %}APPRENANT{% endblock %}

{% block body %}

<div>
    <h1>Informations pour l'apprenant {{ apprenant.nom }} {{ apprenant.prenom }}</h1>
    <h2>Notes pour la Formation : {{ apprenant.formation.nom }}</h2>

    <table>
        <thead>
            <tr>
                <th>Matières</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            {# on passe en revu les matiere de l'apprenant #}
            {% for mod in apprenant.formation.modules %}
                <tr>
                    <td><a href="{{path("programme", {id : mod.id}) }}"> {{ mod.matiere.nom}}</a></td>

    {# on parcour les notes correspondant a la matiere et si c'est celle de l'apprenant on l'affiche #}
                    <td>
                        {% for note in mod.matiere.avoirNotes %}
                        {% if note.apprenants == apprenant %}
                            {{ note.note }}
                        {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<button onclick="history.back()">Retourner à la page précédente</button>


{% endblock %}
