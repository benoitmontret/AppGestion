{% extends 'base.html.twig' %}

{% block title %}{{ utilisateur.prenom }} {{  utilisateur.nom  }}{% endblock %}

{% block body %}
<div class="navbar">
    <img class="logo" src="\assets\img\logo-renard.png" alt="Foxmation"> 
    <div class="titre">
     <button class="bouton-déconnexion" onclick="window.location.href='{{ path('app_logout') }}'"><span>Déconnexion</span></button>
      <h1>FoXmation</h1>
    </div>
</div>

<div class="example-wrapper">
    
    <h1>Information pour l'apprenant {{ utilisateur.nom }} {{ utilisateur.prenom }}</h1>
    <h1>Notes pour la formation : {{ utilisateur.formation.nom }}</h1>
<table>
        <thead>
            <tr>
                <th>Matières</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            {# on passe en revu les matiere de l'apprenant #}
            {% for mod in utilisateur.formation.modules %}
                <tr>
                    <td><a href="{{path("programme", {id : mod.id}) }}"> {{ mod.matiere.nom}}</a></td>

    {# on parcour les notes correspondant a la matiere et si c'est celle de l'apprenant on l'affiche #}
                    <td>
                        {% for note in mod.matiere.avoirNotes %}
                        {% if note.apprenants == utilisateur %}
                            {{ note.note }}
                        {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

        <button onclick="window.location.href='{{ path('app_logout') }}'">Déconnexion</button>
<footer>
    <img class="logo" src="\assets\img\logo-renard.png" alt="Foxmation"> 
    <div class="reseaux-sociaux">
    <a href="https://www.facebook.com/"><img src="\assets\img\Icon akar-facebook-fill.svg" alt="Facebook"></a>
    <a href="https://linkedin.com/?&"><img src="\assets\img\Icon akar-linkedin-fill.svg" alt="Twitter"></a>
    <a href="https://www.twitter.com/"><img src="\assets\img\Icon akar-twitter-fill.svg "alt="Instagram"></a>
    </div>
  <p>&copy; 2024 FoXmation</p>
</footer>
</header>
{% endblock %}
