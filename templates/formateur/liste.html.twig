{% extends 'base.html.twig' %}

{% block title %}FORMATEUR{% endblock %}

{% block body %}

<div>
    <h1>Liste des formateur</h1>

    <ul>    
        {% for formateur in formateurListe %}
            {% if formateur.roles[0] == 'prof' %}
            <li>
                <a href="{{path("formateur", {id : formateur.id}) }}"> {{ formateur.nom }} {{ formateur.prenom }}</a>
                {{formateur.email}}
                {# : {{ formateur.roles[0]}} #}
            </li>
                <ul>
                    {% for mat in formateur.matieres %}
                        <li>{{ mat.nom }} </li>
                    {% endfor %}
                </ul>

            </li> 
            {% endif %}
        {% endfor %}    
    </ul>


</div>
{% endblock %}
