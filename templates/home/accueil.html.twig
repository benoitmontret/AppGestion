{% extends 'base.html.twig' %}

{% block title %}FoXmation{% endblock %}

{% block body %}

<div class="example-wrapper">
            {% if is_granted('ROLE_APPRENANT') or is_granted('ROLE_TUTEUR') or is_granted ('ROLE_FORMATEUR') %}
                <h1>Déconnectez-vous</h1>
            {% else %}
                <h1>Veuillez vous connecter.</h1>
            {% endif %}

        <div class="connexion">
            {% if is_granted('ROLE_APPRENANT') or is_granted('ROLE_TUTEUR') or is_granted ('ROLE_FORMATEUR') %}
                <button class="bouton" onclick="window.location.href='{{ path('app_logout') }}'"><span>Déconnexion</span></button>
            {% else %}
                <button class="bouton" onclick="window.location.href='{{ path('app_login') }}'"><span>Connexion</span></button>
            {% endif %}
        </div>
</div>
{% endblock %}
